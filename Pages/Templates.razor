@page "/template";
@page "/template/{TemplateId:int}";

@if (inListMode)
{
    <ListTemplates />
}
else
{
    <CreateTemplate TemplateId="@((int)TemplateId)" />
}

@code {

    [Parameter]
    public int? TemplateId { get; set; }
    private bool inListMode = true;

    protected override void OnParametersSet()
    {
        if (TemplateId == null)
        {
            inListMode = true;
        }
        else
        {
            inListMode = false;
        }
    }
}